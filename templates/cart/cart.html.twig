{% extends 'base.html.twig' %}

{% block title %}Mon panier{% endblock %}

{% block body %}
<div class="wrapper">
	<h1>Mon panier</h1>
	{# {{ dump (cart) }} #}

	<table class="table">
		<thead class="thead-dark">
			<tr>
				<th scope="col">#</th>
				<th scope="col">Name</th>
				<th scope="col">Quantity</th>
				<th scope="col">Price</th>
			</tr>
		</thead>
		<tbody>
			{% for product in cart %}
				<tr>
					<th scope="row">product.index</th>
					<td>product.name</td>
					<td>product.quantity</td>
					<td>product.price</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>

</div>
{% endblock %}
